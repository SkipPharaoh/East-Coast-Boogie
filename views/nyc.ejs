<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/public/css/style.css">
    <title>NYC</title>
</head>
<body>
    <h1>New York City Home Page</h1>
    <nav>
        <%- include('./partials/nav.ejs')%>
    </nav>
    <div class="responsive-container">
        <div class="topic"><u>Restaurants</u>
            <% for (let i=0; i<restaurants.length; i++) { %>
                <p>Name : <%= restaurants[i].name%></p>
                <p>Location : <%= restaurants[i].location%></p>
                <p>Hours : <%= restaurants[i].hours%></p>
                <br>
            <% } %>
        </div>
        <div class="topic"> <u>Landmarks</u>
            <% for (let i=0; i<landmarks.length; i++) { %>
                <p>Name : <%= landmarks[i].name%></p>
                <p>Location : <%= landmarks[i].location%></p>
                <p>Hours : <%= landmarks[i].hours%></p>
                <br>
            <% } %>
        </div>
        <div class="topic"><u>Events</u>
            <% for (let i=0; i<events.length; i++) { %>
                <p>Name : <%= events[i].name%></p>
                <p>Location : <%= events[i].location%></p>
                <p>Hours : <%= events[i].hours%></p>
                <br>
            <% } %>
        </div>
        <div>
            <a class="nycComment" href="/comments/new">Comment about NYC</a>
            <% for (let i=0; i<comments.length;i++) { %>
                <p><%=comments[i].name%></p>
            <% } %>
        </div>
    </div>
</body>
</html>